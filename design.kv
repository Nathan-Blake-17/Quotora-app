<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 15, 15
            spacing: 20, 20
            Label:
                text: "User Login"
                font_size: '20sp'
            TextInput:
                id: username
                hint_text: "Username"
            TextInput:
                id: password
                password: True
                hint_text: "Password"
            RelativeLayout:
                Button:
                    text: "Login"
                    on_press: root.login(root.ids.username.text, root.ids.password.text)
                    size_hint: 0.3, 0.5
                    pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                    opacity: 1 if self.state == 'normal' else 0.5
            Label:
                id: login_wrong
                text: ""
        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            padding: 10, 10
            spacing: 10, 0
            Button:
                text: "Forgot Password?"
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
                on_press: root.forgot_password()
            Button:
                text: "Sign Up"
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
                on_press: root.sign_up()

<SignUpScreen>:
    GridLayout:
        cols: 1
        padding: 20, 20
        spacing: 20, 20
        Label:
            text: "Sign up Today!"
        TextInput:
            id: username
            hint_text: "New Username"
        TextInput:
            id: password
            hint_text: "New Password"
        Button:
            text: "Sign up"
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)
            background_color: 1, 1, 1, 0
            opacity: 1 if self.state == 'normal' else 0.5
            color: 0.1, 0.7, 1, 1

<SignUpScreenSuccess>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign up successful!"
        Button:
            text: "Go Back To Login page"
            on_press: root.go_to_login()
            color: 0.1, 0.7, 1, 1
            background_color: 1, 1, 1, 0
            opacity: 1 if self.state == 'normal' else 0.5

<ForgotPasswordScreen>:
    GridLayout:
        cols: 1
        padding: 20, 20
        spacing: 20, 20
        Label:
            text: "View Password!"
        TextInput:
            id: password_view
            hint_text: "Enter Your Username"
        RelativeLayout:
            Button:
                text: "See password"
                on_press: root.show_password(root.ids.see_pword.text)
                size_hint: 0.3, 0.5
                pos_hint: {'center_x': 0.3, 'center_y': 0.6}
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
                background_color: 1, 1, 1, 0
            Button:
                text: "Go Back To Login page"
                on_press: root.go_to_login()
                size_hint: 0.3, 0.5
                pos_hint: {'center_x': 0.6, 'center_y': 0.6}
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
                background_color: 1, 1, 1, 0
        Label:
            id: see_pword
            text: ""

<SignUpScreenSuccess>:
    GridLayout:
        cols: 1
        Label:
            id: see_pword
            text: ""
        Button:
            text: "Go Back To Login page"
            on_press: root.go_to_login()
            color: 0.1, 0.7, 1, 1
            background_color: 1, 1, 1, 0
            opacity: 1 if self.state == 'normal' else 0.5

<LoginScreenSuccess>:
    GridLayout:
        cols: 1
        padding: 30, 30
        spacing: 30, 30
        RelativeLayout:
            ImageButton:
                on_press: root.log_out()
                source: 'logout_hover.png' if self.hovered else 'logout_nothover.png'
                size_hint: 0.35, 0.35
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        Label:
            text: "Who would you like a quote from?"
        TextInput:
            id: quotes
            hint_text: "Try typing Socrates, Aristotle, or Plato."
        RelativeLayout
            Button:
                text: "Quote me"
                on_press: root.get_quote(root.ids.quotes.text)
                size_hint: 0.3, 0.5
                pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                opacity: 1 if self.state == 'normal' else 0.5
        ScrollView:
            Label:
                id: quote
                text: ""
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]

<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"
    SignUpScreenSuccess:
        name: "sign_up_screen_success"
    ForgotPasswordScreen:
        name: "forgot_password_screen"
    LoginScreenSuccess:
        name: "login_screen_success"


